@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">Create Category</h2>

            <hr />
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder">DisplayOrder</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="Adress">Adress</label>
                <input asp-for="Adress" class="form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>

            </div>


        </div>
        <button class="btn btn-primary" type="submit" style="width:150px"> Create</button>
        <a asp-controller="Category" asp-action="CategoryIndex" class="btn btn-secondary" style="width:150px">Back To List</a>


    </div>

</form>



@section Scripts
{
@{

<partial name="_ValidationScriptsPartial" />

}



}